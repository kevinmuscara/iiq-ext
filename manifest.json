{
  "name": "iiq",
  "description": "A utility extension for iiQ Ticketing that enhances functionality and workflows.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "*://*.incidentiq.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.incidentiq.com/*"],
      "js": ["modules/ticket-preview.js", "modules/settings.js", "modules/keyboard-shortcuts.js", "modules/flyout-redirect.js", "modules/copy-button.js", "modules/title-updater.js", "modules/observer.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  }
}